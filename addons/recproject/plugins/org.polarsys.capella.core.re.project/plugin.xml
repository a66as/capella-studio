<plugin>
   <extension
         point="org.eclipse.ui.commands">
         <command
               description="Create REC from Library"
               id="org.polarsys.capella.core.re.project.createREC"
               name="Create REC from Library...">
      	</command>
      	<command
             description="Update REC from Library"
             id="org.polarsys.capella.core.re.project.updateREC"
             name="Update REC from Library...">
      	</command>
          <command
          categoryId="org.polarsys.capella.common.re.subcommands"
          description="Include all non-template elements from model"
          id="org.polarsys.capella.core.re.project.addAllNonTemplateElements"
          name="Include all non-template elements from model">
    </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
           <handler
           class="org.polarsys.capella.core.re.project.handlers.AllNonTemplateElementsScopeHandler"
           commandId="org.polarsys.capella.core.re.project.addAllNonTemplateElements">
              <activeWhen>
                 <iterate
                       ifEmpty="false">
                    <and>
                       <instanceof
                             value="org.eclipse.emf.ecore.EObject">
                       </instanceof>
                       <test
                             property="org.polarsys.capella.core.re.project.properties.inLibrary">
                       </test>
                    </and>
                 </iterate>
              </activeWhen>
     </handler>
           <handler
                 class="org.polarsys.capella.core.re.project.handlers.ProjectRecHandler$Create"
                 commandId="org.polarsys.capella.core.re.project.createREC">
              <activeWhen>
                 <and>
                    <count
                          value="1">
                    </count>
                    <iterate>
                       <and>
                          <instanceof
                                value="org.eclipse.emf.ecore.EObject">
                          </instanceof>
                          <test
                                forcePluginActivation="true"
                                property="org.polarsys.capella.core.re.project.properties.inLibrary">
                          </test>
                       </and>
                    </iterate>
                 </and>
              </activeWhen>
           </handler>
           <handler
                 class="org.polarsys.capella.core.re.project.handlers.ProjectRecHandler$Update"
                 commandId="org.polarsys.capella.core.re.project.updateREC">
              <activeWhen>
                 <and>
                    <count
                          value="1">
                    </count>
                    <iterate>
                       <and>
                          <instanceof
                                value="org.eclipse.emf.ecore.EObject">
                          </instanceof>
                          <test
                                forcePluginActivation="true"
                                property="org.polarsys.capella.core.re.project.properties.inLibrary">
                          </test>
                          <or>
                             <test
                                   forcePluginActivation="true"
                                   property="org.polarsys.capella.core.re.updateconnections.ui.tester.isRecCatalogElement">
                             </test>
                             <test
                                   forcePluginActivation="true"
                                   property="org.polarsys.capella.core.re.project.properties.isRecElement">
                             </test>
                          </or>
                       </and>
                    </iterate>
                 </and>
              </activeWhen>
           </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
         <menuContribution
            allPopups="true"
            locationURI="popup:org.polarsys.capella.common.re?after=additions">
         <command
               commandId="org.polarsys.capella.core.re.project.createREC"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
          <command
               commandId="org.polarsys.capella.core.re.project.updateREC"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="toolbar:org.polarsys.capella.common.re.createRec">
         <command
               commandId="org.polarsys.capella.core.re.project.addAllNonTemplateElements"
               icon="icons/full/etool16/add_all.png"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.polarsys.capella.core.re.project.ReProjectPropertyTester"
            id="org.polarsys.capella.core.re.project.propertyTester"
            namespace="org.polarsys.capella.core.re.project.properties"
            properties="inLibrary,isRecElement"
            type="java.lang.Object">
      </propertyTester>
   </extension>

</plugin>
